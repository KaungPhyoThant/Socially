generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
    id String @id @default(cuid())
    email String @unique
    username String @unique
    clerkId String @unique
    name String?
    bio String?
    image String?
    location String?
    website String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
